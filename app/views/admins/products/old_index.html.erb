<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table table class="table table-bordered">
  <thead>
    <tr>
      <th>Product Image</th>
      <th>Supporting Product Images</th>
      <th>Title</th>
      <th>Description</th>
      <th>Stock</th>
      <th>Actions</th>
      <%# <th colspan="3"></th> %>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%if product.primary_image.attached?%>
            <br>
            <%= image_tag product.primary_image, width: "100px", height: "100px"%>
          <%end%>
        </td>
        <td>
          <%if product.supporting_images.attached?%>
            <br>
            <%product.supporting_images.each do |img|%>
              <%= image_tag img, width: "50px", height: "50px"%>
            <%end%>
          <%end%>
        </td>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.stock %></td>
          <td><%= link_to 'Show', admins_product_path(product) %>
            <%= link_to 'Edit', edit_admins_product_path(product) %>
            <%= link_to 'Destroy', admins_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

