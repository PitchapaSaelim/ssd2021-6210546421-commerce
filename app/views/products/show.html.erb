<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Category:</strong>
  <% @product.categories.each do |category| %>
    <span href="#" class="badge badge-pill badge-info"><%= category.name %></span>
  <% end %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Stock:</strong>
  <%= @product.stock %>
</p>

<%if admin_signed_in?%>
  <%= link_to 'Edit', edit_product_path(@product) %> |
<%end%>
<%= link_to 'Back', root_path %>
